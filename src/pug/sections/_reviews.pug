-
    const reviews = [
        {
            id:  'research',
            quote: 'Cians has become an indispensable part of my team — between the engagement manager and the analysts, I am always fully covered and they are a natural extension of our desk.',
            author: 'PORTFOLIO MANAGER',
            fund: '2.4 BILLION AUM LONG/SHORT FUND'
        },
        {
            id: 'analytics',
            quote: 'With Cians’ teams, I never have to worry about bad data affecting my downstream decision making',
            author: 'Quant fund',
            fund: '$50B AUM'
        }
    ]

mixin tab(mod, quote, author, fund, is_active)
    .cell.large-6.medium-7.small-12.reviews_tab&attributes({
        'id': `tab_${mod}`,
        'class': is_active ? 'active': ''
    })
        blockquote
            | “
            =quote
            |”
            cite
                b=author
                =fund

section.grid-container.reviews
    .grid-x.grid-margin-x.align-middle
        .cell.large-6.medium-5.small-12.reviews_video
            .responsive-embed.widescreen
                iframe(width='560', height='315', src='https://www.youtube.com/embed/awVJCIspdaM?controls=0', frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')
        each review, i in reviews
            +tab(...Object.values(review), (i===0))